{
  "name": "nextjs-webrtc-firebase",
  "description": "Next.js & Web-RTC の学習用アプリケーションです。Firebaseを利用してビデオ通話、画面共有、チャット機能、録画機能、デバイス選択 などの機能を作成しました。",
  "version": "1.0.0",
  "scripts": {
    "dev": "NODE_ENV=development next",
    "start": "NODE_ENV=production next start",
    "build": "NODE_ENV=production USE_FIREBASE_EMULATOR=false next build && next export",
    "test": "jest",
    "test:coverage": "jest --collect-coverage",
    "lint": "eslint --ext .ts,.tsx .",
    "lintfix": "eslint --fix --ext .ts,.tsx .",
    "format": "prettier -w 'src/**/*.{ts,tsx}'",
    "fix": "yarn format && yarn lint",
    "deploy:production": "firebase deploy",
    "deploy:preview": "firebase hosting:channel:deploy preview_name",
    "prepare": "husky install",
    "storybook": "start-storybook -p 6006",
    "build-storybook": "build-storybook"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "eslint --fix",
      "prettier --write"
    ],
    "*.{css,less,sass,scss}": [
      "stylelint --fix"
    ]
  },
  "devDependencies": {
    "@material-ui/core": "^4.12.4",
    "@material-ui/icons": "^4.11.3",
    "@reduxjs/toolkit": "^1.8.2",
    "@storybook/addon-actions": "^6.5.9",
    "@storybook/addon-essentials": "^6.5.9",
    "@storybook/addon-interactions": "^6.5.9",
    "@storybook/addon-links": "^6.5.9",
    "@storybook/builder-webpack5": "^6.5.9",
    "@storybook/manager-webpack5": "^6.5.9",
    "@storybook/react": "^6.5.9",
    "@storybook/testing-library": "^0.0.13",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/react-hooks": "^8.0.1",
    "@types/lodash": "^4.14.182",
    "@types/material-ui": "^0.21.12",
    "@types/node": "^18.0.0",
    "@types/react": "^18.0.14",
    "@types/react-dom": "^18.0.5",
    "@types/react-redux": "^7.1.24",
    "@types/react-test-renderer": "^18.0.0",
    "@types/redux-logger": "^3.0.9",
    "@types/styled-components": "^5.1.25",
    "@typescript-eslint/eslint-plugin": "^5.28.0",
    "@typescript-eslint/parser": "^5.28.0",
    "axios": "^0.27.2",
    "eslint": "^7.18.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.30.0",
    "firebase": "^9.8.3",
    "formik": "^2.2.9",
    "formik-material-ui": "^4.0.0-alpha.2",
    "husky": "^8.0.1",
    "jest": "^27.5.1",
    "jsonc-parser": "^3.0.0",
    "lint-staged": "^13.0.2",
    "lodash": "^4.17.21",
    "material-ui": "^0.20.2",
    "next": "^12.1.7-canary.40",
    "next-redux-wrapper": "^7.0.5",
    "node-sass": "^7.0.1",
    "prettier": "^2.7.1",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-firebaseui": "^6.0.0",
    "react-redux": "^8.0.2",
    "react-router": "^6.3.0",
    "react-test-renderer": "^18.2.0",
    "redux": "^4.2.0",
    "redux-devtools-extension": "^2.13.8",
    "sass-loader": "^13.0.0",
    "ts-jest": "^27.1.4",
    "typescript": "4.7",
    "yup": "^0.32.11"
  },
  "license": "MIT",
  "dependencies": {}
}
